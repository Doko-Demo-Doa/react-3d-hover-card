{
  "name": "@darenft/react-3d-hover-card",
  "author": "Quan Pham <phamvanquan@live.com>",
  "description": "React hover card component. Inspired from Steam Trading Card effect ",
  "version": "1.0.9",
  "license": "MIT",
  "main": "./dist/react-3d-hover-card.umd.js",
  "module": "./dist/react-3d-hover-card.es.js",
  "types": "./dist/main.d.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "ci": "npm run lint && npm run type-check"
  },
  "files": [
    "dist",
    "dist/*.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/react-3d-hover-card.es.js",
      "require": "./dist/react-3d-hover-card.umd.cjs"
    },
    "./dist/style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    }
  },
  "dependencies": {
    "@vanilla-extract/css": "1.14.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "vite-plugin-dts": "3.7.0",
    "vite-tsconfig-paths": "4.2.3"
  },
  "devDependencies": {
    "@types/node": "20.11.0",
    "@types/react": "18.2.47",
    "@types/react-dom": "18.2.18",
    "@vanilla-extract/vite-plugin": "3.9.3",
    "@vitejs/plugin-react": "4.2.1",
    "typescript": "5.3.3",
    "vite": "5.0.11"
  },
  "peerDependencies": {
    "react": ">=18.x"
  }
}
